# Linka Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/linka
REDIS_URL=redis://localhost:6379

# Bread.africa Integration
BREAD_API_KEY=your_bread_api_key_here
BREAD_MCP_SERVER_URL=http://localhost:8080/mcp
BREAD_FALLBACK_ENABLED=true

# WaSender API Configuration
WASENDER_API_KEY=your_wasender_api_key_here
WASENDER_WEBHOOK_URL=https://your-domain.com/webhook/wasender
WASENDER_MCP_SERVER_URL=http://localhost:8081/mcp

# Wit.ai NLU Configuration
WIT_AI_ACCESS_TOKEN=your_wit_ai_token_here
WIT_AI_APP_ID=your_wit_app_id_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Payment Fallbacks
PAYSTACK_SECRET_KEY=your_paystack_secret_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Base Network Configuration
BASE_RPC_URL=https://mainnet.base.org
BASE_PRIVATE_KEY=your_base_private_key_here

# Application Configuration
APP_ENV=development
APP_PORT=3000
CORE_SERVICE_PORT=8080
ADAPTER_PORT=3001

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
