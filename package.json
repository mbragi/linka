{
  "name": "linka-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/mini-app",
    "dev:mini-app": "npm run dev --workspace=apps/mini-app",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build:mini-app": "npm run build --workspace=apps/mini-app",
    "build:backend": "npm run build --workspace=apps/backend",
    "lint:mini-app": "npm run lint --workspace=apps/mini-app",
    "lint:backend": "npm run lint --workspace=apps/backend",
    "clean:mini-app": "rm -rf node_modules apps/mini-app/node_modules",
    "clean:backend": "rm -rf node_modules apps/backend/node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
