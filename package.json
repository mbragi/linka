{
  "name": "linka-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/frontend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:contracts:sepolia": "npm run deploy:sepolia --workspace=apps/contracts",
    "dev:contracts:mainnet": "npm run deploy:mainnet --workspace=apps/contracts",
    "dev:contracts:verify:sepolia": "npm run verify:sepolia --workspace=apps/contracts",
    "dev:contracts:verify:mainnet": "npm run verify:mainnet --workspace=apps/contracts",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend",
    "test:contracts": "npm run test --workspace=apps/contracts",
    "test:backend": "npm run test --workspace=apps/backend",
    "lint:frontend": "npm run lint --workspace=apps/frontend",
    "lint:backend": "npm run lint --workspace=apps/backend",
    "compile:contracts": "npm run compile --workspace=apps/contracts",
    "clean:frontend": "rm -rf node_modules apps/frontend/node_modules",
    "clean:backend": "rm -rf node_modules apps/backend/node_modules",
    "clean:contracts": "rm -rf node_modules apps/contracts/node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
